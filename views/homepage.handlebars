{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
 
    <p>Createeed by {{post.user.name}} on {{format_date post.date_created}}</p>

       <p>
      {{comment.text}}
    </p>
    
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
      
    </p>
    {{#each comments as |comment| }}
    <p>{{comment.text}}</p>
      <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}<p>
    {{/each}}

  </div>
</div>
{{/each}}